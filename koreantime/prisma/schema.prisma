// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  pwCheck         String?
  email           String   @unique
  emailVerified   DateTime?
  image           String?
  hashedPassword  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  nickname        String?
  schedule Schedule[]
}

model Schedule {
      id   String @id @default(auto()) @map("_id") @db.ObjectId
      title String
      place String
      time String
      date String
      member String?
      members String
      lat Int?
      lng Int?
      users User @relation(fields: [members], references: [email], onDelete: Cascade)
}