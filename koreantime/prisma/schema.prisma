// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema



generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String?
  pwCheck         String
  email           String  @unique
  emailVerified   DateTime?
  image           String?
  hashedPassword  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  nickname        String
  invited         Boolean
  schedule Schedule[]
  invitedScheduleList InvitedScheduleList[]
}

model Schedule {
      id   String @id @default(auto()) @map("_id") @db.ObjectId
      title String 
      place String
      time String
      date String
      maximumPeople Int
      members Member[]
      lat Float?
      lng Float?
      hostUser String
      users User @relation(fields: [hostUser], references: [email], onDelete: Cascade)
   
     
}

model Member {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String
    nickname String
    scheduleId String @db.ObjectId
    schedule Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
    
     
}

model InvitedScheduleList {
    id   String @id @default(auto()) @map("_id") @db.ObjectId
    
    invitedUser String
    title String
    user User @relation(fields: [invitedUser], references: [email], onDelete: Cascade)

    invitedSchedule String?
    
}